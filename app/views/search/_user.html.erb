<div class="result user media">
  <div class="media">
    <div class="avatar media-left">
      <div class='image'><%= image_tag(current_user.avatar_url(:thumb), style: 'width:33px;height:39px;padding-bottom:6px') %></div>
    </div>
    <div class="media-body">
      <div class="info">
        <%= link_to item.name, frontend_path(item) %>
        <span class="level"><!--%= render_user_level_tag(item) %--></span>
      </div>
      <div class="info number">
        第 <%= item.id %> 位<!--%= t("menu.users")%-->会员
        •
        <span title="注册日期"><%= item.created_at.to_date %></span>
        <% if item.city_name.present? %> • <span title="所在地"><%= city_name_name_tag(item.city_name) %></span><% end %>
        •
        <span><%= item.posts_count %></span> 篇帖子 • <span><%= item.replies_count %></span> 条回帖
      </div>
    </div>
  </div>
</div>
