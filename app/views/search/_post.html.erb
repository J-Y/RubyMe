<%
  title = item.title
%>
<div class="result">
  <div class="title"><%= link_to title, frontend_post_path(item) %></div>
  <div class="info">
    <span class="url"><--%= link_to polymorphic_url(item), frontend_post_path(item) %--></span>
    <span class="date" title="Last Updated At"><%= item.updated_at.to_date %></span>
  </div>
  <div class="desc"><%= item.content.truncate(180) %></div>
</div>
