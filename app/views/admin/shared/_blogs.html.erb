<div class="table-responsive">
  <table class="table table-striped table-hover">
    <thead>
    <tr>
      <th>标题</th>
      <th>分类</th>
      <th>发布时间</th>
    </tr>
    </thead>

    <tbody>
    <% blogs.each do |blog| %>
        <tr>
          <td class="href_name">
            <%= link_to blog.title, admin_blog_path(blog), title: blog.title %>
          </td>
          <td><%= blog.category.try(:name) %></td>
          <td><%= blog.published_time %></td>
          <td>
            <%= link_to '编 辑', edit_admin_blog_path(blog), class: "btn btn-xs btn-success" %>
            <%= link_to '删 除', admin_blog_path(blog), data: {confirm: "你确定要删除这篇文章吗？"}, method: :delete, class: "btn btn-xs btn-danger" %>
          </td>
        </tr>
    <% end %>

    <tr>
      <td colspan='4'><%= paginate blogs %></td>
      <td colspan='2' class="text_middle">
        <div class="pull-right">
          <%= link_to('查看所有', admin_blogs_path) unless url_for == admin_blogs_path %>
        </div>
      </td>
    </tr>
    </tbody>
  </table>
</div>
