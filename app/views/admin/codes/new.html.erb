<%= simple_form_for [:admin, @code], html: {class: "form-horizontal form_new_code"} do |f| %>
    <%= f.association :language, collection: Language.all, label_method: :code, value_method: :id %>
    <%= f.association :category, collection: @categories, include_blank: false %>

    <%= f.input :source %>
    <%= f.input :title %>
    <%= f.input :tags %>

    <div class="form-group">
      <div class="col-md-12">
        <%= f.cktext_area :content, ckeditor: {toolbar: "Easy", height: 380} %>
      </div>
    </div>

    <div class="form-group form-actions">
      <label class="col-md-5"> </label>

      <div class="col-md-7">
        <%= f.button :submit, t(:create), class: "btn btn-primary btn_new_post" %>
      </div>
    </div>
<% end %>
