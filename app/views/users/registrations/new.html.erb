<div class="panel-heading">
  <div class="heading">注 册</div>
</div>
<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: 'form-horizontal'}) do |f| %>
    <div class="panel-body">
      <%= f.error_notification %>
      <%#= devise_error_messages! %>
      <%= f.input :uid, required: true, input_html: {class: "uid"} %>
      <%= f.input :email, required: true %>
      <%= f.input :password, required: true %>
      <%= f.input :password_confirmation, required: true %>

      <!-- <#% unless Settings.user.skip_captcha %>
        <div class="captcha_content">
          <#%= show_simple_captcha %>
        </div>
      <#% end %> -->

      <div class="form-group form-actions">
        <label class="col-md-3"> </label>

        <div class="col-md-9">
          <%= f.submit "提交注册信息", :class => "btn btn-primary", 'data-disable-with' => "正在提交" %>
        </div>
      </div>
    </div>

    <div class="panel-footer">
      <%= render "users/shared/links" %>
    </div>
<% end %>
<script type="text/javascript">
    $(function () {
        new UserRegisterView({el: $("form#new_user")})
    });
</script>
