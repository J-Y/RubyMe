<div class="panel-heading">
  <div class="heading">
    <h4><%= @code.title %></h4>

    收藏时间: <%= @code.published_time %><br/>
    代码分类: <%= @code.category.try(:name) %>
    <br/>
    代码标签: <%= code_tags_from_str(@code.tags) %>
  </div>
</div>

<div class="panel-body">
  <%= @code.content.html_safe %>
  <%= social_share_button_tag("#{@code.title} via: @#{Settings.site.name}", :popup => true) %>
</div>

<div class="panel-footer">
  <%= link_to "返回收藏列表", codes_path %>

  <div class="pull-right">
    <%= link_to raw('<span class="glyphicon glyphicon-edit"></span>编辑'), edit_code_path(@code), class: 'btn btn-sm btn-default' %>

    <%= link_to '删 除', code_path(@code), data: {confirm: "你确定要删除该代码吗？"}, method: :delete, class: "btn btn-sm btn-danger" %>
  </div>
</div>
