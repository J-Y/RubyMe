
<div class="blog-masthead">
  <div class="container">
    <nav class="blog-nav">
      <a class="<%= 'active' if action_name == 'index' && params[:controller] == 'frontend/home' %>" href="<%= frontend_root_path %>">首页</a>

      <% if current_user %>
        <a class="<%= 'active' if blogger == current_user && controller.class.superclass.to_s == 'BloggerController' %>" href="<%= frontend_path(current_user) %>">我的帖子</a>
      <% else %>
        <a href="<%= new_user_session_path %>">我的帖子</a>
      <% end %>

      <% if blogger && blogger != current_user %>
        <!-- visit other's blogger -->
         <a class="<%= 'active' if controller.class.superclass.to_s == 'BloggerController' %>" href="<%= frontend_path(blogger) %>"><%= blogger.human_name %></a>
      <% end %>
   <% if current_user %>
      <a class="<%= 'active' if params[:controller] == 'admin/codes' %>" href="admin/codes">收藏</a>
   <% else %>
      <a href="<%= new_user_session_path %>">收藏</a>
   <% end %>
      <a class="<%= 'active' if params[:controller] == 'frontend/blogs' %>" href="<%= frontend_blogs_path %>">日志</a>
      <a class="" href="/features">记事本</a>
      <a class="<%= 'active' if action_name == 'about_us' && params[:controller] == 'frontend/home' %>" href="<%= frontend_about_us_path %>">关于我们</a>
      <a href="/" class="site-logo"><%= image_tag('shared/ruby_me.png', style: 'width:146px;height:36px;padding-bottom:2px')%></a>
      <span class="pull-right">
        <% if current_user %>
        <%= image_tag(current_user.avatar_url(:thumb), style: 'width:33px;height:39px;padding-bottom:5px')%>

          <a class="link_admin_home <%= 'active' if params[:controller].include?('admin/') && controller.class.to_s != "Admin::MessagesController" %>" href="<%= admin_root_path %>"><%= current_user.human_name %></a>
          <a class="link_admin_messages <%= 'active' if controller.class.to_s == "Admin::MessagesController" %>" href="<%= admin_messages_path %>">
            <% badge_class =  messages.unreads.count > 0 ? "badge-error" : ''%>
             <span class="badge <%= badge_class %>"><%= messages.unreads.count %></span>
          </a>

          <a id="link_sign_out" class="" href="<%= destroy_user_session_path %>">退出</a>
        <% else %>
      <a id="link_sign_up" class="<%= 'active' if params[:controller] == 'users/registrations' %>" href="<%= new_user_registration_path %>">注册</a>

           <a id="link_sign_in" class="<%= 'active' if params[:controller] == 'devise/sessions' %>" href="<%= new_user_session_path %>">登录</a>
        <% end %>
      </span>

    </nav>
  </div>
</div>
