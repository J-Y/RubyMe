<% if Rails.env.production? %>
  <%= render partial: 'layouts/shared/javascript' %>
<% end %>
<div class="blog-masthead">
  <div class="container">
    <nav class="blog-nav">
      <!-- <a class="" > -->
        <%= image_tag('shared/ruby_icon.png', style: 'width:36px;height:36px') %>
      <!-- </a> -->
      <a class="<%= 'active' if action_name == 'index' && params[:controller] == 'frontend/home' %>" href="<%= frontend_root_path %>"><%= Settings.site.name %></a>

      <% if current_user %>
        <a class="<%= 'active' if @blogger == current_user && controller.class.superclass.to_s == 'BloggerController' %>" href="<%= frontend_path(current_user) %>">我的主页</a>
      <% else %>
        <a href="<%= new_user_session_path %>">我的博客</a>
      <% end %>

      <% if @blogger && @blogger != current_user %>
        <!-- visit other's blogger -->
         <a class="<%= 'active' if controller.class.superclass.to_s == 'BloggerController' %>" href="<%= frontend_path(@blogger) %>"><%= @blogger.human_name %></a>
      <% end %>

      <a class="" href="/bloggers">收藏</a>
      <a class="" href="/features">新功能</a>
      <a class="<%= 'active' if action_name == 'about_us' && params[:controller] == 'frontend/home' %>" href="<%= frontend_about_us_path %>">关于我们</a>

      <span class="pull-right">
        <% if current_user %>
        <!-- <#%= image_tag(gravatar_url(current_user.email), style: 'width:40px;height:40px;padding-bottom:2px')%> -->
          <%= image_tag('shared/ruby_icon.png', style: 'width:36px;height:36px;padding-bottom:2px')%>

          <a class="link_admin_home <%= 'active' if params[:controller].include?('admin/') && controller.class.to_s != "Admin::MessagesController" %>" href="<%= admin_root_path %>"><%= current_user.human_name %></a>
          <a class="link_admin_messages <%= 'active' if controller.class.to_s == "Admin::MessagesController" %>" href="<%= admin_messages_path %>">
             <span class="label label-success"><%= @messages.unreads.count %></span>
          </a>

          <a id="link_sign_out" class="" href="<%= destroy_user_session_path %>">退出</a>
        <% else %>
      <a id="link_sign_up" class="<%= 'active' if params[:controller] == 'users/registrations' %>" href="<%= new_user_registration_path %>">注册</a>

           <a id="link_sign_in" class="<%= 'active' if params[:controller] == 'devise/sessions' %>" href="<%= new_user_session_path %>">登录</a>
        <% end %>
      </span>

    </nav>
  </div>
</div>
